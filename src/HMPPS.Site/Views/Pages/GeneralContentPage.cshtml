@model HMPPS.Site.ViewModels.Pages.GeneralContentPageViewModel

<div id="global-header-bar"></div>

<div class="site-wrapper">

    @Html.Partial("/Views/Partials/_Breadcrumb.cshtml", Model.BreadcrumbItems)

    <main class="elements-index root-index" id="content" role="main" tabindex="-1">
        <div class="grid-row">
            <div class="column-two-thirds">
                <div class="pub-c-title">
                    <h1 class="pub-c-title__text">
                        @Html.Sitecore().Field("Page Title")
                    </h1>
                </div>
                @if (Model.ShowRelatedPages)
                {
                    <aside class="part-navigation-container" role="complementary">
                        <nav role="navigation" class="grid-row part-navigation" aria-label="@Model.RelatedPagesAriaLabel">
                            @if (Model.RelatedPagesLeftColumn.RelatedPages.Any())
                            {
                              @Html.Partial("/Views/Partials/_RelatedPages.cshtml", Model.RelatedPagesLeftColumn)
                            }
                            @if (Model.RelatedPagesRightColumn.RelatedPages.Any())
                            {
                             @Html.Partial("/Views/Partials/_RelatedPages.cshtml", Model.RelatedPagesRightColumn)
                            }
                        </nav>
                    </aside>
                }
                <div class="content">
                    @Html.Sitecore().Field("Main Content")
                </div>
                @Html.Partial("/Views/Partials/_PrevNext.cshtml", Model.PrevNext)
            </div>
           
            <div class="column-third add-title-margin">
               @Html.Sitecore().Placeholder("right-blocks")
            </div>
        </div>

</main><!-- / #content -->

</div>
