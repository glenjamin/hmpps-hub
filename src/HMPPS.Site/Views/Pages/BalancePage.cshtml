@model HMPPS.Site.ViewModels.Pages.BalancePageViewModel

<div id="global-header-bar"></div>

<div class="site-wrapper">

    @Html.Partial("/Views/Partials/_Breadcrumb.cshtml", Model.BreadcrumbItems)

    <div class="pub-c-title">
        <h1 class="pub-c-title__text">
            @Html.Sitecore().Field("Page Title")
        </h1>
    </div>
    <div class="at-a-glance">
        <div class="grid-row">
            @if (Model.ShowAccountBalance)
            {
                <div class="column-one-third">
                    <div class="data">
                        @Html.Sitecore().Field("Account Balance Image", new { @class = "data-img" })
                        <span class="data-item data-heading heading-xlarge">&pound;@Model.AccountBalance.ToString("0.00")</span>
                        <span class="data-item bold-large">@Html.Sitecore().Field("Account Balance Text")</span>
                        <span class="data-item body-text">@Html.Sitecore().Field("Last Updated Text") @Html.Sitecore().Field("Today Text") @@ @Model.AccountBalanceLastUpdate.ToShortTimeString()</span>
                    </div>
                </div>
            }
            @if (Model.ShowPhoneCredit)
            {
                <div class="column-one-third">
                    <div class="data">
                        @Html.Sitecore().Field("Phone Credit Image", new { @class = "data-img" })
                        <span class="data-item data-heading heading-xlarge">&pound;@Model.PhoneCredit.ToString("0.00")</span>
                        <span class="data-item bold-large">@Html.Sitecore().Field("Phone Credit Text")</span>
                        <span class="data-item body-text">@Html.Sitecore().Field("Last Updated Text") @Html.Sitecore().Field("Today Text") @@ @Model.PhoneCreditLastUpdate.ToShortTimeString()</span>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
