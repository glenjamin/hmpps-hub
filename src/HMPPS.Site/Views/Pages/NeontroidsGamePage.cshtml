@model HMPPS.Site.ViewModels.Pages.NeontroidsGamePageViewModel

<div id="global-header-bar"></div>

<div class="site-wrapper">
    @Html.Partial("/Views/Partials/_Breadcrumb.cshtml", Model.BreadcrumbItems)
    <main class="elements-index root-index" id="content" role="main" tabindex="-1">
        <div class="grid-row">
            <div class="column-two-thirds">
                <div class="pub-c-title">
                    <h1 class="heading-xlarge">@Html.Sitecore().Field("Page Title")</h1>
                </div>
                <div class="games neontroids js-neontroids">
                    @Html.Sitecore().Field("Game Image", new { @class = "neontroids__img"})
                </div>
                <div class="content">
                    <button class="js-neontroids-trigger button" type="button" name="button">@Html.Sitecore().Field("Play Button Text")</button>
                    <h2 class="heading-large">@Html.Sitecore().Field("Game Instruction Title")</h2>
                    @Html.Sitecore().Field("Game Instruction Text")
                </div>
            </div>
            <div class="column-third add-title-margin">
                @Html.Sitecore().Placeholder("right-blocks")
            </div>
        </div>
    </main><!-- / #content -->
</div>
