@model HMPPS.Site.ViewModels.Pages.BookSectionPageViewModel

<div id="global-header-bar"></div>

<div class="site-wrapper">

    @Html.Partial("/Views/Partials/_Breadcrumb.cshtml", Model.BreadcrumbItems)

    <main class="elements-index root-index" id="content" role="main" tabindex="-1">
        <h1 class="heading-large">@Html.Sitecore().Field("Page Title")</h1>
    <div class="image-grid">
        @if (Model.Children.Any())
        {
            var rows = Model.Children.Count / 3 + 1;
            var itemIndex = 0;

            for (var rowIndex = 0; rowIndex < rows; rowIndex++)
            {
                var itemsInRow = Model.Children.Skip(itemIndex).Take(3);
                <div class="grid-row">
                    @foreach (var item in itemsInRow)
                    {
                        <div class="column-one-third">
                            <div class="image-grid-item">
                                <a href="@Sitecore.Links.LinkManager.GetItemUrl(item)">
                                    <img src="@E3.SitecoreHelper.FieldMethods.GetMediaItemUrlWithHash(item, "Thumbnail Image")" alt="@E3.SitecoreHelper.FieldMethods.GetImageDescription(item, "Thumbnail Image")">
                                    <h2 class="heading-medium">@E3.SitecoreHelper.BaseTemplateMethods.GetNavTitleOrPageHeading(item, "Navigation Title", "Page Title")</h2>
                                </a>
                            </div>
                        </div>
                    }
                </div>
                itemIndex += itemsInRow.Count();


            }
        }
    </div>

</main><!-- / #content -->

</div>