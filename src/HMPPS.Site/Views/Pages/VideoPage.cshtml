@model HMPPS.Site.ViewModels.Pages.VideoPageViewModel

<div id="global-header-bar"></div>

<div class="site-wrapper">

    @Html.Partial("/Views/Partials/_Breadcrumb.cshtml", Model.BreadcrumbItems)

    <main role="main" id="content" class="answer" lang="en">
        <div class="grid-row">
            <div class="column-two-thirds">
                <div class="pub-c-title">
                    <h1 class="heading-xlarge">
                        @Html.Sitecore().Field("Page Title")
                    </h1>
                </div>
                <div class="video-player">
                    <video controls id="video" class="video-js custom-video vjs-default-skin" data-videotitle="@Html.Sitecore().Field("Page Title")" poster="@Model.ThumbnailImageUrl" controls preload="auto">
                        <source src="@Model.VideoUrl" type="video/mp4">
                        <div class="vjs-no-js">
                            @Html.Sitecore().Field("Enable Javascript Message")
                        </div>
                    </video>
                </div>
                <div class="content">
                    <p>@Html.Sitecore().Field("Main Content")</p>
                </div>
            </div>
            <div class="column-third add-title-margin">
                @Html.Sitecore().Placeholder("right-blocks")
            </div>
        </div>
    </main><!-- / #content -->

</div>
