@model List<RadioEpisode>
@using HMPPS.Models.Cms;
<div class="pub-c-title">
    <h1 class="pub-c-title__text ">
        @Html.Sitecore().Field("Folder Name")
    </h1>
</div>
<div class="list-links">
    <div class="column-half no-gutter">
        <ul>
            @{
                var i = 0;
                var firstColEnd = (Model.Count + 1) / 2;
            }
            @foreach (var episode in Model)
            {
                var newUl = (i == firstColEnd) ? "</ul></div><div class=\"column-half no-gutter\"><ul>" : "";
                @Html.Raw(newUl)
                <li><a href="@episode.RadioEpisodeUrl">@episode.Title</a></li>
                i++;
            }
        </ul>
    </div>
</div>
