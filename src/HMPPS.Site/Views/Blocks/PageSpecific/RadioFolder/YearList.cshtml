@model  List<RadioFolder>
@using HMPPS.Models.Cms
<aside class="part-navigation-container" role="complementary">
    <nav role="navigation" class="grid-row part-navigation" aria-label="@Sitecore.Globalization.Translate.Text("Audio Listings")">
        <ul class="column-one-third no-gutter list-bare">
            @foreach (var radioFolder in Model)
            {

                <li>
                    @if (radioFolder.IsCurrent)
                    {
                        @radioFolder.FolderName
                    }
                    else
                    {
                        <a href="@radioFolder.FolderUrl">@radioFolder.FolderName</a>
                    }
                </li>
            }
        </ul>
    </nav>
</aside>
