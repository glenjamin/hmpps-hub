<!DOCTYPE html>
@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions
@{
    var contextLanguage = Sitecore.Context.Language;
}
<!--[if lt IE 9]><html class="lte-ie8" lang="@contextLanguage"><![endif]-->
<!--[if gt IE 8]><!-->
<html lang="@contextLanguage">
<!--<![endif]-->
<head>
    @Html.Sitecore().VisitorIdentification()
    @Html.Action("Head", "MvcLayout")
</head>

<body class="">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

    @Html.Action("SkipLink", "MvcLayout")

    @Html.Action("CookieMessage", "MvcLayout")

    @Html.Action("Header", "MvcLayout")

    @Html.Sitecore().Placeholder("content")

    @Html.Partial("/Views/Partials/_Footer.cshtml")

    <div id="global-app-error" class="app-error hidden"></div>

    @Html.Action("Scripts", "MvcLayout")
</body>
</html>

