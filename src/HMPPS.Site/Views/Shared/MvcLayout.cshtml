    <!-- Google Tag Manager -->
    <!-- End Google Tag Manager -->

    <div id="skiplink-container">
        <div>
            <a href="#content" class="skiplink">@Html.Sitecore().Field("Skip Link Text", headModel.SiteSettingsItem)</a>
        </div>
    </div>

    <div id="global-cookie-message">
        @Html.Sitecore().Field("Cookie Notice Message", headModel.SiteSettingsItem)
    </div>

    <header role="banner" id="global-header">
        <div class="header-wrapper">
            <div class="header-global">
                @Html.Sitecore().Field("Logo Link", headModel.SiteSettingsItem, new { @id = "logo", @class = "content" })
            </div>
        </div>
    </header>

    @Html.Sitecore().Placeholder("content")

    @Html.Partial("/Views/Partials/_Footer.cshtml")

    <div id="global-app-error" class="app-error hidden"></div>

