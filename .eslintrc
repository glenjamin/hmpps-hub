{
    "extends": "airbnb",
    "env": {
        "amd": true,
        "browser": true,
        "jquery": true,
        "node": true,
        "es6": true,
        "worker": true
    },
    "plugins": ["compat"],
    "settings": {
      "polyfills": []
      },
    "rules": {
        "compat/compat": 2,
        "import/extensions": 0,
        "indent": ["error", 2],
        "eqeqeq": 2,
        "comma-dangle": ["error", {
          "arrays": "never",
          "objects": "never",
          "imports": "never",
          "exports": "never",
          "functions": "ignore"
        }],
        "no-console": 0,
        "no-debugger": 1,
        "no-extra-semi": 1,
        "no-extra-parens": 1,
        "no-irregular-whitespace": 0,
        "no-undef": 0,
        "func-names": 0,
        "no-unused-vars": 0,
        "semi": 1,
        "semi-spacing": 1,
        "valid-jsdoc": [
            2,
            { "requireReturn": false }
        ],
        "max-len": 0,
        "no-plusplus": [
          2,
          { "allowForLoopAfterthoughts": true }
        ],
        "no-param-reassign" : [
          2,
          { "props": false }
        ]
    }
}
